<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/padding_16">
    <RelativeLayout

        android:id="@+id/service_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_marginLeft="@dimen/margin_4"
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_service_icon"
           />
        <TextView
            android:layout_marginLeft="@dimen/margin_4"
            android:id="@+id/tv_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_service_icon"
            android:layout_below="@id/tv_service_name"
            android:text="已被应用程序启动"/>
        <TextView
            android:id="@+id/tv_service_run_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <TextView
        android:padding="@dimen/padding_16"
        android:id="@+id/tv_service_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_rl"
        android:textSize="@dimen/text_size_24"
        android:text="应用程序服务开始。停止服务可能导致程序失败。"
        />
    <Button
        android:id="@+id/btn_service_stop"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="停止"
        android:background="@drawable/ripple_style"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_service_description"
        />
</RelativeLayout>