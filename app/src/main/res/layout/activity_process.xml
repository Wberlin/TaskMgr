<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allMem"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_4"
            android:id="@+id/process_tv_total_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_green"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avaibleMem"
            />
        <TextView
            android:layout_marginLeft="@dimen/margin_4"
            android:id="@+id/process_tv_avaible_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_green"
            />
    </LinearLayout>

    <TextView
        android:gravity="center_vertical"
        android:padding="@dimen/padding_16"
        android:id="@+id/process_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wbl.taskmanager.view.RoundProgressBarWidthNumber
            android:id="@+id/process_progessbar"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            zhy:radius="50dp"
            android:progress="0"
            zhy:progress_text_color="#ff77B4E8"
            zhy:progress_text_size="@dimen/text_size_24"
            zhy:progress_unreached_color="#ffBCB4B4"
            zhy:progress_reached_color="#ff77B4E8"
            zhy:progress_reached_bar_height="2dp"
            zhy:progress_unreached_bar_height="1dp"
            />
        <GridView
            android:orientation="vertical"
            android:id="@+id/process_gv"
            android:visibility="gone"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:listSelector="@drawable/item_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</LinearLayout>